{
	"name": "pkce-codes",
	"version": "0.2.0",
	"description": "Create code_verifier and code_challenge values",
	"engines": {
		"node": ">=16.0.0"
	},
	"main": "./lib/pkce.js",
	"types": "./lib/pkce.d.ts",
	"scripts": {
		"all": "pnpm i & tsc & pnpm format & pnpm clean & pnpm build & pnpm test & pnpm docs",
		"build": "del /S /Q lib\\* && tsc",
		"build:watch": "tsc --watch",
		"lint": "eslint src/**/*.ts test/**/*.ts",
		"lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
		"clean": "eslint src/**/*.ts test/**/*.ts --fix",
		"docs": "typedoc --readme none --out docs src",
		"test": "jest --coverage --config jest.config.js",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"up": "pnpm up -i",
		"upgrade": "pnpm up",
		"latest": "pnpm up -i -L",
		"l": "pnpm i & pnpm latest"
	},
	"files": [
		"lib/**/*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cope/pkce.git"
	},
	"keywords": [
		"pkce"
	],
	"author": "Predrag Stojadinovic",
	"license": "Unlicense",
	"bugs": {
		"url": "https://github.com/cope/pkce/issues"
	},
	"homepage": "https://github.com/cope/pkce#readme",
	"dependencies": {
		"@types/crypto-js": "^4.2.2",
		"crypto-js": "^4.2.0"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.14",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"coveralls": "^3.1.1",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-prettier": "^5.5.1",
		"fast-check": "^4.2.0",
		"jest": "^30.0.4",
		"prettier": "^3.6.2",
		"sonarjs": "^1.0.0",
		"source-map-support": "^0.5.21",
		"ts-jest": "^29.4.0",
		"typedoc": "^0.28.7",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.13.1"
}
